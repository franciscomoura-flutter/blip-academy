rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin check function
    function isAdmin() {
      return get(/databases/$(database)/documents/cmsConfig/admin).data.adminUid == request.auth.uid;
    }
    
    // Special protection for admin configuration
    match /cmsConfig/{document} {
      allow read, write: if isAdmin();
    }
    
    // All other collections - public read, admin-only write
    match /{collection}/{document=**} {
      allow read: if true;  // Anyone can read any collection
      allow write: if isAdmin();  // Only admins can write
    }
  }
}